@model WebApp.NET_MVC_2022_12D_PP_Encuestadora.Models.Pregunta

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pregunta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PreguntaId" />
            <div class="form-group">
                <label asp-for="tituloPregunta" class="control-label"></label>
                <input asp-for="tituloPregunta" class="form-control" />
                <span asp-validation-for="tituloPregunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoPregunta" class="control-label"></label>
                <select asp-for="tipoPregunta" class="form-control" asp-items="Html.GetEnumSelectList<TipoPregunta>()">
                    <option selected="selected" value="">Seleccione Tipo Pregunta </option>
                </select>
                <span asp-validation-for="tipoPregunta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EncuestaId" class="control-label"></label>
                <select asp-for="EncuestaId" class="form-control" asp-items="ViewBag.EncuestaId"></select>
                <span asp-validation-for="EncuestaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
