@model WebApp.NET_MVC_2022_12D_PP_Encuestadora.Models.Encuesta

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Encuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EncuestaId" />
            <div class="form-group">
                <label asp-for="tituloEncuesta" class="control-label"></label>
                <input asp-for="tituloEncuesta" class="form-control" />
                <span asp-validation-for="tituloEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datetimeCreacionEncuesta" class="control-label"></label>
                @*ESTO DEBE SER AUTOMATIZADO SEGUN EL DIA EN QUE EL CLIENTE CREA LA ENCUESTA*@
                <input asp-for="datetimeCreacionEncuesta" class="form-control" />
                <span asp-validation-for="datetimeCreacionEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datetimeVencimientoEncuesta" class="control-label"></label>
                @*ESTO DEBE SER AUTOMATIZADO SEGUN LA MEMBRESIA DEL CLIENTE QUE CREA LA ENCUESTA*@
                <input asp-for="datetimeVencimientoEncuesta" class="form-control" />
                <span asp-validation-for="datetimeVencimientoEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="puntosEncuesta" class="control-label"></label>
                <select asp-for="puntosEncuesta" class="form-control" asp-items="Html.GetEnumSelectList<PuntosEncuesta>()">
                    @*ESTO DEBE SER AUTOMATIZADO SEGUN LA MEMBRESIA DEL CLIENTE QUE CREA LA ENCUESTA*@
                    <option selected="selected" value="">Seleccione Puntos Encuesta </option>
                </select>
                <span asp-validation-for="puntosEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
